{
  "name": "nitvel",
  "version": "1.0.0",
  "description": "\"Project for Liliana\"",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "electron-builder"
  },
  "author": "Alex1Ibar",
  "license": "MIT",
  "build": {
    "appId": "nitvel-pos",
    "asar": true,
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "fs-extra": "^8.1.0",
    "mysql": "^2.17.1"
  },
  "devDependencies": {
    "electron": "^13.6.6",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.5.0"
  }
}
